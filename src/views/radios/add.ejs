<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title : "Nosotros" }) %>

    <body>
        <!--Cabezera-->
        <%- include('../partials/header-admin') %>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
                integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                crossorigin="anonymous">

            <main class="">
                <div class="col-12 col-md-10 col-lg-8 mx-auto">

                    <div class="container">

                        <h2>Agregar radio</h2>
                        <hr>
                        <form method="POST" class="row">
                            <div class="mb-3 col-12">
                                <label for="radio">Nombre</label>

                                <input class="form-control" type="text" placeholder="Nombre de radio"
                                    name="name">
                            </div>
                            <div class="mb-3 col-12 col-md-6">
                                <label for="province">Provincia</label>

                                <input class="form-control" type="text" placeholder="provincia"
                                    name="province">
                            </div>
                            <div class="mb-3 col-12 col-md-6">
                                <label for="city">Ciudad</label>

                                <input class="form-control" type="text" placeholder="ciudad"
                                    name="city">
                            </div>
                            <div class="mb-3 col-12 col-md-6">
                                <label for="frequency">Frecuencia</label>


                                <input class="form-control" type="text" placeholder="frecuencia"
                                    name="frequency">
                            </div>
                            <div class="mb-3 col-12 col-md-6">
                                <label for="frequency">Responsable</label>


                              <select class="form-select" name="radio">
                                    <option value="" selected hidden>Seleccione...</option>
                                    <% users.forEach(({id,username}) => { %>
                                     <option value="<%= id %>"><%= username %></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="mb-3 d-flex justify-content-end">
                                <button type="submit" class="btn btn-success mb-3">Guardar cambios</button>
                            </div>
                        </form>
                    </div>

                </div>



            </main>

    </body>

</html>