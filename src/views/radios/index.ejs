<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title : "Admin" }) %>

    <body>
        <!--Cabezera-->
        <%- include('../partials/header-admin') %>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
                integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                crossorigin="anonymous">

            <main class="">
                <div class="col-12 col-md-10 mx-auto">

                <!--Formulario editar stream de hoy-->
                <div class="container">

                  <div class="d-flex justify-content-between align-items-center">
                    <h2>Administrar radios</h2>
                    <a class="btn btn-success" href="/radios/add">Agregar nueva</a>
                </div>
                    <hr>
                    <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Frecuencia</th>
                            <th scope="col">Ciudad</th>
                            <th scope="col">Provincia</th>
                            <th scope="col">Responsable</th>
                            <th scope="col">Acciones</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% radios.forEach(({id, name, province, city, frequency, user}) => { %>
                            <tr>

                            <td><%= name %></td>
                            <td><%= frequency %></td>
                            <td><%= city %></td>
                            <td><%= province %></td>

                            <td><%= user.username %></td>
                            <td>
                              <div class="d-flex gap-2">
                                <a href="/radios/detail/<%= id %>" class="btn btn-sm btn-primary"><i class="fa-solid fa-eye"></i></a>
                                <a href="/radios/reset" class="btn btn-sm btn-success"><i class="fa-solid fa-pencil"></i></a>
                                <a href="/radios/destroy" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                            </div>
                            </td>
                          </tr>

                          <% }) %>
                        
                      
                        </tbody>
                      </table>
                </div>

                </div>



            </main>

    </body>

</html>