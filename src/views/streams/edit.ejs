<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title : "Editar transmisión" }) %>

    <body>
        <!--Cabezera-->
        <%- include('../partials/header-admin') %>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
                integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                crossorigin="anonymous">

            <main class="">
                <div class="col-12 col-md-10 col-lg-8 mx-auto">

                    <div class="container">

                        <h2>Editar transmisión</h2>
                        <hr>
                        <form method="POST" class="row" action="/records/update/<%= record.id %>?_method=PUT">
                            <div class="mb-3 col-12 col-md-6">
                                <label for="title">Titulo del stream</label>

                                <input class="form-control" type="text" placeholder="Titulo"
                                    name="title" value="<%= record.title %>">
                            </div>
                            <div class="mb-3 col-12 col-md-6">
                                <label for="date">Fecha del stream</label>

                                <input class="form-control" type="date" placeholder="Fecha" name="date" value="<%= record.date %>"
                                   >
                            </div>
                            <div class="mb-3 col-12 ">
                                <label for="description">Breve descripción</label>

                                <textarea class="form-control" type="text" name="description" style="resize: none;"><%= record.description %></textarea>
                            </div>
                            <div class="mb-3 col-12 col-md-6">
                                <label for="link">Link del video</label>

                                <input class="form-control" type="text" name="link" value="<%= record.link %>">
                            </div>


                            <div class="mb-3 col-12 col-md-6">
                                <label for="radio">Seleccionar radio</label>

                                <select class="form-select" name="radio">
                                    <% radios.forEach(({id, name}) => { %>
                                     <option value="<%= id %>" <%= id == record.radio && 'selected' %>><%= name %></option>
                                    <% }) %>
                                </select>
                            </div>
                            
                            <div class="mb-3 d-flex justify-content-end">
                                <button type="submit" class="btn btn-success mb-3">Guardar cambios</button>
                            </div>

                        </form>
                    </div>

                </div>



            </main>

    </body>

</html>