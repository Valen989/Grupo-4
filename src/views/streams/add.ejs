<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title : "Nosotros" }) %>

    <body>
        <!--Cabezera-->
        <%- include('../partials/header-admin') %>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
                integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                crossorigin="anonymous">

            <main class="">
                <div class="col-12 col-md-10 col-lg-8 mx-auto">

                <!--Formulario editar stream de hoy-->
                <div class="container">

                    <h2>Nuevo</h2>
                    <hr>
                    <form method="POST" class="row">
                        <div class="col-12 col-md-4 mb-3">
                            <label for="title">Titulo del stream</label>
                      
                            <input class="form-control" type="text" placeholder="Titulo"
                                aria-label="default input example" name="title">
                        </div>
                        <div class="col-12 col-md-4 mb-3">
                            <label for="title">Link de conexion</label>
                      
                            <input class="form-control" type="text" placeholder="Link de conexion"
                                aria-label="default input example" name="link">
                        </div>
                        <div class="col-12 col-md-4 mb-3">
                            <label for="title">Emisora Radial</label>
                      
                            <select name="radio" id="radio" class="form-select">
                                <option value="" hidden selected>Seleccione...</option>
                                <% radios.forEach(({id, name}) => { %>
                                 <option value="<%= id %>"><%= name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-12  mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Descripcion stream</label>
                    
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" style="resize: none;"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="img-optional">Agregar imagen a la desripcion</label>
                     
                            <input class="form-control" type="file" id="formFile">
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success mb-3">Guardar cambios</button>
                        </div>
                    </form>
                </div>

                </div>



            </main>

    </body>

</html>