<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title : "Admin" }) %>

    <body>
        <!--Cabezera-->
        <%- include('../partials/header-admin') %>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
                integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                crossorigin="anonymous">

            <main class="">
                <div class="col-12 col-md-10 mx-auto">

                <!--Formulario editar stream de hoy-->
                <div class="container">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2>Historial de streams</h2>
                        <a class="btn btn-success" href="/streams/add">Nuevo</a>
                    </div>
                    <hr>
                   <div class="table-responsive">
                    <% if (streams.length) { %>
                       <table class="table">
                      <thead>
                        <tr>
                          <th scope="col">Titulo</th>
                          <th scope="col">Link</th>
                          <th scope="col">Radio</th>
                          <th scope="col">Fecha</th>
                          <th scope="col">Acciones</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% streams.forEach(({id, title, date, link, radio}) => { %>
                          <tr>

                          <td><%= title %></td>
                          <td><%= date %></td>
                          <td><%= link %></td>
                          <td><%= radio?.name %></td>
                          <td>
                            <div class="d-flex gap-2">
                              <a href="/records/detail/<%= id %>" class="btn btn-sm btn-primary"><i class="fa-solid fa-eye"></i></a>
                              <a href="/records/edit/<%= id %>" class="btn btn-sm btn-success"><i class="fa-solid fa-pencil"></i></a>
                              <a href="/records/destroy" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                          </div>
                          </td>
                        </tr>

                        <% }) %>
                      
                    
                      </tbody>
                    </table>
                    <% }else{ %>
                      <div class="alert alert-warning">
                        AÃºn no hay streams guardados
                      </div>
                    <% } %>
                   </div>
                </div>

                </div>



            </main>

    </body>

</html>