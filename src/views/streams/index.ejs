<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { title : "Admin" }) %>

<body>
    <!--Cabezera-->
    <%- include('../partials/header-admin') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous">

    <main class="">
        <div class="col-12 col-md-10 mx-auto">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <h2>Historial de streams</h2>
                    <a class="btn btn-success" href="/streams/add">Nuevo</a>
                </div>
                <hr>
                <div class="table-responsive">
                    <% if (streams.length) { %>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Titulo</th>
                                <th scope="col">Radio</th>
                                <th scope="col">Link</th>
                                <th scope="col">Fecha</th>
                                <th scope="col">Vista</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% streams.forEach(({ id, title, date, link, radio, description }) => { %>
                            <tr>
                                <td><%= title %></td>
                                <td><%= radio?.name %></td>
                                <td><%= link %></td>
                                <td><%= date %></td>
                                <td>
                                    <div class="d-flex gap-2">
                                   
                                        <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#<%= id %>">
                                            <i class="fa-solid fa-eye"></i>
                                        </button>
                                       
                                        <%- include('../partials/modal-detail', { id, title, link, description, date }) %>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% } else { %>
                    <div class="alert alert-warning">
                        AÃºn no hay streams guardados
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>