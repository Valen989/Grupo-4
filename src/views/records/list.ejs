               <h4><%= title %></h4>
            </article> 
                
        <% }) %>
        
          
            
        </section>
        </div>
        <section >
            <h2 class="Titulo">Grabaciones anteriores</h2>
          <div class="images-container">
            <% records.forEach(({title, link}) => { %>
