<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head', { title : "Usuarios" }) %>

    <body>
        <!--Cabezera-->
        <%- include('./partials/header-admin') %>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
                integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                crossorigin="anonymous">

            <main class="">
                <div class="col-12 col-md-10 mx-auto">

                    <!--Formulario editar stream de hoy-->
                    <div class="container">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2>Usuarios</h2>
                            <a class="btn btn-success" href="/users/register">Agregar usuario</a>
                        </div>
                        <hr>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                  <tr>
                                    <th scope="col">Usuario</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Rol</th>
                                    <th scope="col">Acciones</th>
                                  </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(({id, username, email, role}) => { %>
                                        <tr>
                                            <th><%= username %></th>
                                            <td><%= email %></td>
                                            <td><%= role %></td>
                                            <td>
                                                <div class="d-flex gap-2">
                                                    <a href="/users/detail/<%= id %>" class="btn btn-sm btn-primary"><i class="fa-solid fa-eye"></i></a>
                                                    <a href="/users/reset" class="btn btn-sm btn-success"><i class="fa-solid fa-key"></i></a>
                                                    <a href="/users/destroy" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                                                </div>
                                            </td>
                                          </tr>
                                    <% }) %>
                                
                                
                                </tbody>
                              </table>
                        </div>
                    </div>
                </div>
            </main>

    </body>

</html>